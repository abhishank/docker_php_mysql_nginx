#~ Test cron
* * * * * date && echo  "Test cron to check status of cron service" >> /var/log/cron/cron.log 2>&1
#~ Magento FE cron
* * * * * /usr/local/bin/php -dmemory_limit=2G /home/projects/public/bin/magento cron:run 2>&1 | grep -v \"Ran jobs by schedule\" >> /home/projects/public/var/log/magento.cron.log
